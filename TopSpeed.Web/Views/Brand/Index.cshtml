@model List<Brand>

<div class="container">
    <div class="row mb-4">
        <div class="col-md-6 text-uppercase">
            <h2>Brand List</h2>
        </div>
        <div class="col-md-6 text-end">
            <a asp-controller="Brand" asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle"></i>Create</a>
        </div>

    </div>
    <hr />

        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Established Year</th>
                </tr>
            </thead>
            <tbody>
             

            @if (Model != null && Model.Any())
            {
                foreach (var item in Model)
                {
                    <!-- Display item properties here -->
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.EstablishedYear</td>
                    </tr>
                }
            }
            else
            {
                <div class="container">
                    <div class="row">
                        <div class="col-md-12">
                            <h2 class="text-center-uppercase text-warning pt-4">No Records</h2>

                        </div>

                    </div>

                </div>
            }


            </tbody>
        </table>
  
</div>